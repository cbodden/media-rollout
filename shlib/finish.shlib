function _finish()
{
    clear

    _SVC_CNT=-1
    _PORT_CNT=-1
    _CNT=0

    for ITER in ${_INSTALLED_NAME[@]}
    do
        _SVC=${ITER%:*}
        _PORT=${ITER#*:}

        if [ ${#_SVC} -gt $_SVC_CNT ]
        then
            _SVC_CNT=${#_SVC}
        fi

        if [ ${#_PORT} -gt $_PORT_CNT ]
        then
            _PORT_CNT=${#_PORT}
        fi
    done

    printf "%s\n" \
        "Services now setup to run on ${_IP} :"

    for ITER in ${_INSTALLED_NAME[@]}
    do
        printf "[%d] %.${_SVC_CNT}s on port: %.${_PORT_CNT}s\n" \
            "$((++_CNT))" "${ITER%:*} ................" "${ITER#*:}"

    done

    printf "%s\n" \
        "" "Services are not started by default :"

    for ITER in ${_INSTALLED_NAME[@]}
    do
        printf "sudo systemctl restart %.${_SVC_CNT}s\n" \
            "${ITER%:*}"

    done

    printf "%s\n" "" \
        "These are the paths configured for storage / downloading :" \
        "/${_PATH}/movies" \
        "/${_PATH}/music" \
        "/${_PATH}/tv" \
        "/${_PATH}/books" \
        "/${_PATH}/downloads" \
        "/${_PATH}/downloads/complete" \
        "/${_PATH}/downloadsincomplete" "" ""
}

function _finish_configure()
{
    _SVC_CNT=-1
    _PORT_CNT=-1
    _SVC_USER_CNT=1
    _SVC_PASS_CNT=1
    _CNT=0

    for ITER in ${_CONFIGURED_NAME[@]}
    do
        local _SVC=$(echo ${ITER} \
            | cut -d: -f1)
        local _PORT=$(echo ${ITER} \
            | cut -d: -f2)
        local _SVC_USER=$(echo ${ITER} \
            | cut -d: -f3)
        local _SVC_PASS=$(echo ${ITER} \
            | cut -d: -f4)

        if [ ${#_SVC} -gt $_SVC_CNT ]
        then
            _SVC_CNT=${#_SVC}
        fi

        if [ ${#_PORT} -gt $_PORT_CNT ]
        then
            _PORT_CNT=${#_PORT}
        fi

        if [ ${#_SVC_USER} -gt $_SVC_USER_CNT ]
        then
            _SVC_USER_CNT=${#_SVC_USER}
        fi

        if [ ${#_SVC_PASS} -gt $_SVC_PASS_CNT ]
        then
            _SVC_PASS_CNT=${#_SVC_PASS}
        fi

    done

    printf "%s\n" \
        "" "Services now configured :"

    for ITER in ${_CONFIGURED_NAME[@]}
    do
        local _I_SVC=$(echo ${ITER} \
            | cut -d: -f1)
        local _I_PORT=$(echo ${ITER} \
            | cut -d: -f2)
        printf "[%d] %.${_SVC_CNT}s on port: %.${_PORT_CNT}s\n" \
            "$((++_CNT))" "${_I_SVC} ................" "${_I_PORT}"

    done

    printf "%s\n" \
        "" "usernames and password :"

    for ITER in ${_CONFIGURED_NAME[@]}
    do
        local _I_SVC_USER=$(echo ${ITER} \
            | cut -d: -f3)
        local _I_SVC_PASS=$(echo ${ITER} \
            | cut -d: -f4)
        printf "[%d] %.${_SVC_USER_CNT}s : %.${_SVC_PASS_CNT}s\n" \
            "$((++_CNT))" "${_I_SVC_USER} ................" "${_I_SVC_PASS}"

    done
}

function _clean()
{
    rm /opt/Lidarr*.tar.gz &>/dev/null
    rm /opt/Radarr*.tar.gz &>/dev/null
    rm /tmp/temp.deb &>/dev/null
}
