        fi

        if [ ${#_PORT} -gt $_PORT_CNT ]
        then
            _PORT_CNT=${#_PORT}
        fi
    done

    printf "%s\n" \
        "Services now configured :"

    for ITER in ${_CONFIGURED_NAME[@]}
    do
        printf "[%d] %.${_SVC_CNT}s on port: %.${_PORT_CNT}s\n" \
