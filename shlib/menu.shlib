function _menu()
{
    clear

    printf "%s\n" \
        "this script is for deploying a full media stack but it also gives you" \
        "the ability to pick and choose what you want." \
        "" "" "" \
        "this will ask you for options so that your setup can be tuned to " \
        "your liking" "" "" ""

    _pause

    ##################
    ## tv selection ##
    ##################

    printf "%s\n" \
        "lets start with tv show services."

    declare -a _TV=( "none" "sonarr" "sickbeard" "sickrage" )

    _CNT=0
    for ITER in "${_TV[@]}"
    do
        echo [${_CNT}] $(echo ${ITER})
        _CNT=$((_CNT+1))
    done

    printf "%s" \
        "Choose a service (by number and only one) : "

    read -a _TV_READ

    printf "%s\n" \
        " you selected ${_TV[${_TV_READ}]}" ""

    _pause

    #####################
    ## movie selection ##
    #####################

    printf "%s\n" \
        "now lets add movie services."

    declare -a _MVS=( "none" "radarr" "couchpotato" )

    _CNT=0
    for ITER in "${_MVS[@]}"
    do
        echo [${_CNT}] $(echo ${ITER})
        _CNT=$((_CNT+1))
    done

    printf "%s" \
        "Choose a service (by number and only one) : "

    read -a _MVS_READ

    printf "%s\n" \
        " you selected ${_MVS[${_MVS_READ}]}" ""

    _pause

    #####################
    ## music selection ##
    #####################

    printf "%s\n" \
        "now lets add music services."

    declare -a _MUSIC=( "none" "lidarr" "headphones" )

    _CNT=0
    for ITER in "${_MUSIC[@]}"
    do
        echo [${_CNT}] $(echo ${ITER})
        _CNT=$((_CNT+1))
    done

    printf "%s" \
        "Choose a service (by number and only one) : "

    read -a _MUSIC_READ

    printf "%s\n" \
        " you selected ${_MUSIC[${_MUSIC_READ}]}" ""

    _pause

    ########################
    ## subtitle selection ##
    ########################

    if [ "${_MVS_READ}" -gt 0 ] || [ "${_TV_READ}" -gt 0 ]
    then
        printf "%s\n" \
            "now lets add a subtitle handler if you need one."

        declare -a _SBT=( "none" "bazarr" )

        _CNT=0
        for ITER in "${_SBT[@]}"
        do
            echo [${_CNT}] $(echo ${ITER})
            _CNT=$((_CNT+1))
        done

        printf "%s" \
            "Choose a service (by number and only one) : "

        read -a _SBT_READ

        printf "%s\n" \
            " you selected ${_SBT[${_SBT_READ}]}"

    else
        _SBT_READ="0"

    fi
}
